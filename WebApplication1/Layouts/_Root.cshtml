@using System.Globalization
@inherits ViewPage
<!DOCTYPE html>

<html>
    <head>
        <title>Here's the title</title>
    </head>
    <body>
        <div class="pure-g">
            <div class="sidebar pure-u-1 pure-u-med-1-4">
                <div class="header">
                    <hgroup >
                        <h1 class="brand-title">@Res.Web_Index_Sidebar_Title</h1>
                        <h2 class="brand-tagline">@Res.Web_Index_Sidebar_Subtitle</h2>
                    </hgroup>

                    <nav class="nav">
                        <ul class="nav-list">
                            <li class="nav-item"><a href="/">Content Page, Default</a></li>                           
                            <li class="nav-item"><a href="/?_l=en">Content Page, English</a></li>                           
                            <li class="nav-item"><a href="/?_l=pt">Content Page, Portuguese</a></li>                           
                            <li class="nav-item"><a href="/todos?_l=en">Content Page, English</a></li>                           
                            <li class="nav-item"><a href="/todos?_l=pt">Content Page, Portuguese</a></li>                           
                        </ul>
                    </nav>
                    <div>
                        <div class="pure-button">Culture: @CultureInfo.CurrentCulture</div>
                        <div class="pure-button">UiCulture: @CultureInfo.CurrentUICulture</div>
                    </div>
                </div>
            </div>
            <div class="content pure-u-1 pure-u-med-3-4">
                @RenderBody()
            </div>
        </div>
    </body>
</html>